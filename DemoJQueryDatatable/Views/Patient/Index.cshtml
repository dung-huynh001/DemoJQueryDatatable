@model IEnumerable<DemoJQueryDatatable.Models.DB.PATIENT>

@{
    ViewBag.Title = "Online Doctor Appointment Management System";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Breadcrumb -->
<nav aria-label="breadcrumb" class="pt-4 pb-3">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Patient Management</li>
    </ol>
</nav>

<!-- Main -->
<div id="patient-container">
    <p>
        <a class="btn btn-outline-success" href="@Url.Action("Create")" role="button">Create New</a>
    </p>
    <div class="table-responsive">
        <table class="table table-striped table-sm" id="tblPatient">
            <thead>
                <tr>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.PATIENTID)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.PATIENTNAME)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.PATIENTNATIONALID)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.PATIENTGENDER)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.PATIENTMOBILENO)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.PATIENTDATEOFBIRTH)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.PATIENTADDRESS)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.CREATEDBY)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.CREATEDDATE)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.UPDATEDBY)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.UPDATEDDATE)
                    </th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.PATIENTID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PATIENTNAME)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PATIENTNATIONALID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PATIENTGENDER)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PATIENTMOBILENO)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PATIENTDATEOFBIRTH)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PATIENTADDRESS)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CREATEDBY)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CREATEDDATE)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UPDATEDBY)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UPDATEDDATE)
                        </td>
                        <td>
                            <div class="container d-inline-flex">
                                @Html.ActionLink("Edit", "Edit", new { id = item.PATIENTID }, new { @class = "btn btn-primary btn-m" })
                                @Html.ActionLink("Delete", "Delete", new { id = item.PATIENTID }, new { @class = "btn btn-danger btn-m ml-1" })
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <script type="text/javascript">
            $(document).ready(function () {
                $('#tblPatient').DataTable({
                    responsive: true,
                    columnDefs: [
                        { responsivePriority: 1, targets: 0 },
                        { responsivePriority: 2, targets: -1 }
                    ],
                    autoFill: true
                });
            });
        </script>
    </div>
</div>
